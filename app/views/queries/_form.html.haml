= form_for @query, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :customer_email, :class => 'control-label'
    .controls
      = f.text_field :customer_email, :class => 'text_field'
  .control-group
    = f.label :customer_name, :class => 'control-label'
    .controls
      = f.text_field :customer_name, :class => 'text_field'
  .control-group
    = f.label :subject, :class => 'control-label'
    .controls
      = f.text_field :subject, :class => 'text_field'
  .control-group
    = f.label :department_id, :class => 'control-label'
    .controls
      = f.select :department_id,  options_from_collection_for_select(Department.all, "id", "department_name") ,{},{:class=>"text_field'"}
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_field', :rows=>10
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.back', :default => t("helpers.links.back")), |
      :back, :class => 'btn'                                   |
